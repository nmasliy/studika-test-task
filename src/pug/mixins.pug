mixin picture(path, extension, width, height, alt, loading="auto")
  picture
    source(srcset= path + ".webp" type="image/webp")
    img(src= path + "." + extension,
      width= width, height= height, alt= alt, loading= loading)

mixin picture-x2(path, extension, width, height, alt, loading="auto")
  picture
    source(srcset= path + ".webp 1x, " + path + "@2x.webp 2x", type="image/webp")
    img(src= path + "." + extension, srcset= path + "." + extension + " 1x, " + path + "@2x." + extension + " 2x",
      width= width, height= height, alt= alt, loading= loading)
